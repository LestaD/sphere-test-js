@import 'toolkit'

.FloatActionButton
  align-items: center
  bottom: 3.2rem
  right: 3.2rem
  display: flex
  size: 6rem
  justify-content: center
  position: fixed

  @media screen and (max-width: 768px)
    bottom: 2rem
    right: 2rem

  &.Hidden
    figure
      width: 0 !important
      height: 0 !important
      font-size: 0.00001rem !important

      svg
        size: 0.0000001rem

  figure
    level-3()
    align-items: center
    background-color: colorAccent
    border-radius: 50%
    color: lightPrimaryText
    cursor: pointer
    display: flex
    font-size: 3rem
    size: 5.6rem
    justify-content: center
    line-height: 3rem
    margin: 0
    border: 0px solid colorAccent
    zoom: 1
    transition: all .12s ease-in

    svg
      transition: all .12s
      size: 2.4rem

      path
        fill: white

    &:hover
      level-4()
      size: 5.8rem

      svg
        size: 2.6rem