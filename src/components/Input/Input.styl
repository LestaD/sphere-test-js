@import 'toolkit'

.Input
  display: flex
  flex-flow: row nowrap
  align-items: stretch

  input
    level-1()
    flex-grow: 1
    background: white
    border-radius: .2rem
    border: none
    color: darkPrimaryText
    display: flex
    font-weight: fontWeightThin
    padding: 1.3rem
    transition: all .3s

    &:active
    &:focus
      outline: none

    &::placeholder
      color: darkHintText

  .Button
    display: flex
    align-items: center
    justify-content: center
    padding: 0 2rem
    cursor: pointer
    background: transparent
    border-top-right-radius: 0.2rem
    border-bottom-right-radius: 0.2rem
    margin-left: - (4rem + 2.4rem)
    transition: all .3s

    svg
      size: 2.4rem
      path
        fill: darkHintText
        transition: fill .3s

    &:hover
      background: darkDividerColor

      svg
        path
          fill: white

  &.transparent
    input
      box-shadow: none
      background: lightHintText

      &:focus
        level-1()
        background: white
